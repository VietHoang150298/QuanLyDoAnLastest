@model IEnumerable<QuanLyDoAnLastest.Models.Classes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Specializations.SpecializationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDelete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Specializations.SpecializationName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ClassCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ClassName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastUpdate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsDelete)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsActive)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ClassCode }) |
        @Html.ActionLink("Details", "Details", new { id = item.ClassCode }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ClassCode })
    </td>
</tr>
}

</table>
