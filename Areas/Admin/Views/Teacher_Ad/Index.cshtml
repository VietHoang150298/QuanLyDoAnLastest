@model PagedList.IPagedList<QuanLyDoAnLastest.Models.Teachers>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Specialization
        </th>
        <th>
            Teacher Code
        </th>
        <th>
            Teacher Name
        </th>
        <th>
            Position
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Note
        </th>
        <th>
            Guide Student
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Specializations.SpecializationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuideStudent)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TeacherCode }) |
                @Html.ActionLink("Details", "Details", new { id = item.TeacherCode }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TeacherCode })
            </td>
        </tr>
    }

</table>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", "Teacher_Ad",
        new { page }))